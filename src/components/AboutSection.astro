---
import SecondaryLinkButton from "./SecondaryLinkButton.astro";

interface Props {
  aboutUs?: string;
}

const { aboutUs } = Astro.props;

---

<section class="py-16 bg-secondary text-primary">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      {
        aboutUs && (
          <h2 class="text-3xl font-bold text-center mb-12">QUIENES SOMOS</h2>
          <div class="prose prose-lg mx-auto">
            <p set:html={aboutUs} class="text-lg leading-relaxed"></p>
          </div>
          <div class="mt-10 text-center">
            <SecondaryLinkButton href="/contacto">
              QUIERO COMPRAR
            </SecondaryLinkButton>
          </div>
        )
      }
    </div>
  </div>
</section>
