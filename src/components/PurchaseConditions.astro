---
import { getPurchaseConditions } from "@/server/utils";

const purchaseConditions = await getPurchaseConditions();

---

<section class="py-16 bg-primary text-secondary">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold text-center mb-12">CONDICIONES DE COMPRA</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {purchaseConditions.map((condition) => (
          <div class="bg-secondary text-primary p-6 rounded-lg shadow-sm">
            <h3 class="text-xl font-semibold mb-4">{condition.title}</h3>
            <p>{condition.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
